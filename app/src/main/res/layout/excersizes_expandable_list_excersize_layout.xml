<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/exNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExName"
        android:textAppearance="@style/TextAppearance.EditTitle"
        android:textColor="@color/cardview_dark_background"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exSubGroupTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Subgroup"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exNameTv" />

    <TextView
        android:id="@+id/exLevelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Level"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintStart_toStartOf="@+id/exSubGroupTv"
        app:layout_constraintTop_toBottomOf="@+id/exSubGroupTv" />

    <CheckBox
        android:id="@+id/inCurDayCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:focusable="false"
        android:theme="@style/CheckBoxStyle"
        app:layout_constraintBottom_toBottomOf="@+id/exLevelTv"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>